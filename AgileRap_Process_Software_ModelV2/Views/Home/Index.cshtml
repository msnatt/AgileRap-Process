@model AgileRap_Process_Software_ModelV2.Models.User

@{
    ViewData["Title"] = "Home Page";
    var Text = ViewBag.MassageWrong;
}
<h1>Login</h1>
<br />
<br />

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="offset-md-1">
        <div class="row">
            <div class="col-md-1 text-end">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.Email, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-end">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.Password, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <h6 class="row offset-md-1 col-md-8 text-danger">
            @Text
        </h6>
        <br />
        <div class="row">
            <div class="offset-md-1 col-md-1">
                @Html.ActionLink("Register", "Register", "Home", new { }, new { @class = "text-black" })
            </div>
            <div class="col-md-2 text-end">
                <input value="Login" type="submit" class="btn-outline-secondary text-black" />
            </div>
        </div>
    </div>
}
